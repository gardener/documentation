#using-gardener h1{text-align:center;font-size:1.8em}#using-gardener .description{text-align:justify}#using-gardener .role-button{min-height:260px;background-color:rgba(0,0,0,.02);padding:10px;border-radius:3px;box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24);transition:all .8s cubic-bezier(.25,.8,.25,1);cursor:pointer}#using-gardener .role-button:hover{transform:translate(0,-3px);box-shadow:0 14px 28px rgba(0,0,0,.25),0 10px 10px rgba(0,0,0,.22)}