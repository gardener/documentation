#!/bin/ash

if [[ -z "${GARDENER_DOCUMENTATION_PATH}" ]]; then
  echo "GARDENER_DOCUMENTATION_PATH not set"
  exit 1
fi

cd ${GARDENER_DOCUMENTATION_PATH}
npm install
node ./node/index.js
cd hugo
../binaries/hugo version
../binaries/hugo --destination ../docs
cd -
node ./node/index.js clean


git add . -A
git commit -m 'Automatic build triggered by last commit [skip ci]'